extends layout/default

//- includes
include mixins/input

block append head
  link(rel='stylesheet', href='http://localhost:3000/stylesheets/form/styles.css')

block content 
  p Register
  main
    section
      each error in errors
        p #{error.param} - #{error.msg}
    section
      form(autocomplete='on', name='registration_form', action=`/registration`, method="post")
        +input({ label: 'First name:', name: 'name', type: 'text' })
        +input({ label: 'Second name:', name: 'lastName', type: 'text' })
        +input({ label: 'Mail:', name: 'email', type: 'text' })
        +input({ label: 'Password: ', name: 'password', type: 'password'})
        button(type='submit') Submit
    section 
      each user in users
        p #{user.name} #{user.lastName} #{user.email}
  script(type='text/javascript', src='http://localhost:3000/javascripts/book/form_focus.mjs')
