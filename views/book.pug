extends layout/default

//- includes
include mixins/input

block append head
  link(rel='stylesheet', href='http://localhost:3000/stylesheets/book/styles.css')

block content 
  p Trip #{trip_id}
  main
    section
      each error in errors
        p #{error.param} - #{error.msg}
    section
      form(autocomplete='on', name='booking_form', action=`/book/${trip_id}`, method="post")
        +input({ label: 'First name:', name: 'name', type: 'text' })
        +input({ label: 'Second name:', name: 'lastName', type: 'text' })
        +input({ label: 'Mail:', name: 'email', type: 'text' })
        +input({ label: 'Tickets: ', name: 'tickets', type: 'number'})
        button(type='submit') Submit
  script(type='text/javascript', src='http://localhost:3000/javascripts/book/form_focus.mjs')
