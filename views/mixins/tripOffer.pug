include image

mixin tripOffer(trip)
  section.offer
    +image()(src=trip.img, alt='logo', class="offer_img")
    article.offer_article
      header
        h1 #{trip.title}
      p.offer_description #{trip.offer_description}
      footer.offer_footer
        p Price: #{trip.price}
        a(href='../caribbeanTripDescription/index.html') Book &gt;&gt;