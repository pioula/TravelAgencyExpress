//- Includes
include ../mixins/image

//- Page
doctype html
html(lang="en")
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge')
      meta(name='viewport' content='width=device-width, initial-scale=1.0')
      title Travel Agency
      link(rel='stylesheet', href='stylesheets/globals.css')
  body
    header 
      block bodyHeader
        +image()(src='images/logo.png', alt='logo')
        nav.dropdown
          .dropbtn Menu
          .dropdown-content
            a(href='#') Home
            a(href='#') Trip           
            a(href='#') Book
        nav.header_nav
          ul
            li: a(href="#") Home
            li: a(href="#") Trip 
            li: a(href="#") Book    
    .page
      main
        block content
    footer
      block footer
        nav.footer_nav
          ul
            li: p.footer_nav_text Travel agency 2022
            li: a(href='#') About
            li: a(href='#') Privacy Politics 
            li: a(href='#') Contact